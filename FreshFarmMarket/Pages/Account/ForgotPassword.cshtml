@page
@model FreshFarmMarket.Pages.Account.ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot Password";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow">
                <div class="card-header bg-info text-white text-center">
                    <h3 class="mb-0">
                        <i class="bi bi-question-circle"></i><br>
                        Forgot Password
                    </h3>
                </div>
                <div class="card-body p-4">
                    @if (!string.IsNullOrEmpty(Model.StatusMessage))
                    {
                        <div class="alert alert-info alert-dismissible fade show" role="alert">
                            @Model.StatusMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <div class="alert alert-secondary" role="alert">
                        <i class="bi bi-info-circle"></i>
                        Enter your email address and we'll send you a link to reset your password.
                    </div>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-4">
                            <label asp-for="Input.Email" class="form-label">
                                <strong>Email Address</strong>
                            </label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="Input.Email" 
                                       class="form-control" 
                                       type="email" 
                                       placeholder="your.email@example.com"
                                       autofocus />
                            </div>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-info btn-lg text-white">
                                <i class="bi bi-send"></i> Send Reset Link
                            </button>
                            <a asp-page="/Account/Login" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left"></i> Back to Login
                            </a>
                        </div>
                    </form>

                    <hr class="my-4">

                    <div class="text-center">
                        <small class="text-muted">
                            <i class="bi bi-shield-lock"></i> 
                            Password reset links expire after 1 hour for security.
                        </small>
                    </div>
                </div>
            </div>

            <!-- Help Card -->
            <div class="card mt-3">
                <div class="card-body">
                    <h6 class="card-title"><i class="bi bi-question-circle"></i> Need Help?</h6>
                    <ul class="list-unstyled mb-0">
                        <li><small>• Check your spam folder if you don't see the email</small></li>
                        <li><small>• The reset link expires in 1 hour</small></li>
                        <li><small>• If you still can't reset, contact support</small></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
