@page
@model FreshFarmMarket.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0"><i class="bi bi-key"></i> Change Password</h3>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.StatusMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @Model.StatusMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @* PASSWORD EXPIRATION WARNINGS *@
                    @if (Model.PasswordExpired)
                    {
                        <div class="alert alert-danger">
                            <i class="bi bi-exclamation-triangle-fill"></i>
                            <strong>Password Expired!</strong> Your password has expired and must be changed immediately.
                        </div>
                    }
                    else if (Model.PasswordExpiringSoon)
                    {
                        <div class="alert alert-warning">
                            <i class="bi bi-exclamation-triangle"></i>
                            <strong>Password Expiring Soon!</strong> Your password will expire in <strong>@Model.DaysUntilExpiry day(s)</strong>. 
                            Please change it now to avoid account lockout.
                        </div>
                    }

                    @* MINIMUM AGE RESTRICTION WARNING *@
                    @if (!Model.CanChangeNow && Model.MinutesUntilCanChange > 0)
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-clock-history"></i>
                            <strong>Password Change Restricted</strong><br>
                            You recently changed your password. For security reasons, you must wait <strong>@Model.MinutesUntilCanChange minute(s)</strong> before changing it again.
                        </div>
                    }

                    <div class="alert alert-info">
                        <h5 class="alert-heading"><i class="bi bi-info-circle"></i> Password Policy</h5>
                        <p><strong>Your password must meet these requirements:</strong></p>
                        <ul class="mb-0">
                            <li>At least <strong>12 characters</strong> long</li>
                            <li>At least one <strong>uppercase letter</strong> (A-Z)</li>
                            <li>At least one <strong>lowercase letter</strong> (a-z)</li>
                            <li>At least one <strong>number</strong> (0-9)</li>
                            <li>At least one <strong>special character</strong> (!@@#$%^&*)</li>
                            <li>Cannot reuse last <strong>2 passwords</strong></li>
                            <li>Must wait <strong>5 minutes</strong> between password changes</li>
                            <li>Must change password every <strong>90 days</strong></li>
                        </ul>
                    </div>

                    <form method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Input.CurrentPassword" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input asp-for="Input.CurrentPassword" class="form-control" type="password" id="currentPassword" />
                                <button class="btn btn-outline-secondary" type="button" id="toggleCurrent">
                                    <i class="bi bi-eye" id="toggleCurrentIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Input.CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.NewPassword" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-key"></i></span>
                                <input asp-for="Input.NewPassword" class="form-control" type="password" id="newPassword" />
                                <button class="btn btn-outline-secondary" type="button" id="toggleNew">
                                    <i class="bi bi-eye" id="toggleNewIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>

                            <div class="mt-2">
                                <div class="progress" style="height: 5px;">
                                    <div id="passwordStrengthBar" class="progress-bar" role="progressbar" style="width: 0%"></div>
                                </div>
                                <small id="passwordStrengthText" class="form-text"></small>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-check-circle"></i></span>
                                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" id="confirmPassword" />
                                <button class="btn btn-outline-secondary" type="button" id="toggleConfirm">
                                    <i class="bi bi-eye" id="toggleConfirmIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" id="changePasswordBtn" class="btn btn-primary btn-lg">
                                <i class="bi bi-check-circle"></i> Change Password
                            </button>
                            <a asp-page="/Account/Home" class="btn btn-outline-secondary">
                                <i class="bi bi-x-circle"></i> Cancel
                            </a>
                        </div>
                    </form>

                    <div class="card bg-light mt-3">
                        <div class="card-body">
                            <h6 class="card-title"><i class="bi bi-shield-check"></i> Password Security Tips</h6>
                            <ul class="mb-0 small">
                                <li>Use a unique password you don't use anywhere else</li>
                                <li>Consider using a passphrase (e.g., "MyDog!Loves2PlayFetch")</li>
                                <li>Don't share your password with anyone</li>
                                <li>Change your password if you suspect it's been compromised</li>
                                <li>Enable Two-Factor Authentication for extra security</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        // Handle button disabled state on page load
        document.addEventListener('DOMContentLoaded', function() {
            const submitBtn = document.getElementById('changePasswordBtn');
            const canChangeNow = @(Model.CanChangeNow ? "true" : "false");
            const minutesRemaining = @Model.MinutesUntilCanChange;
            
            if (!canChangeNow) {
                submitBtn.disabled = true;
                submitBtn.innerHTML = '<i class="bi bi-clock-history"></i> Wait ' + minutesRemaining + ' minute(s)';
                
                // Auto-enable submit button after minimum age period
                if (minutesRemaining > 0) {
                    setTimeout(function() {
                        location.reload(); // Refresh page after minimum age expires
                    }, minutesRemaining * 60 * 1000);
                }
            }
        });
        
        // Toggle password visibility
        function setupPasswordToggle(toggleId, inputId, iconId) {
            document.getElementById(toggleId)?.addEventListener('click', function() {
                const input = document.getElementById(inputId);
                const icon = document.getElementById(iconId);
                
                if (input.type === 'password') {
                    input.type = 'text';
                    icon.classList.remove('bi-eye');
                    icon.classList.add('bi-eye-slash');
                } else {
                    input.type = 'password';
                    icon.classList.remove('bi-eye-slash');
                    icon.classList.add('bi-eye');
                }
            });
        }

        setupPasswordToggle('toggleCurrent', 'currentPassword', 'toggleCurrentIcon');
        setupPasswordToggle('toggleNew', 'newPassword', 'toggleNewIcon');
        setupPasswordToggle('toggleConfirm', 'confirmPassword', 'toggleConfirmIcon');

        // Password Strength Indicator
        document.getElementById('newPassword')?.addEventListener('input', function() {
            const password = this.value;
            const result = calculatePasswordStrength(password);
            
            const bar = document.getElementById('passwordStrengthBar');
            const text = document.getElementById('passwordStrengthText');
            
            bar.style.width = result.score + '%';
            bar.className = 'progress-bar ' + result.colorClass;
            text.textContent = result.level;
            text.className = 'form-text ' + result.textClass;
        });

        function calculatePasswordStrength(password) {
            let score = 0;
            
            if (password.length >= 12) score += 20;
            if (password.length >= 16) score += 10;
            if (/[a-z]/.test(password)) score += 15;
            if (/[A-Z]/.test(password)) score += 15;
            if (/[0-9]/.test(password)) score += 15;
            if (/[^A-Za-z0-9]/.test(password)) score += 20;
            if (/[a-z].*[a-z]/.test(password)) score += 5;
            if (/[A-Z].*[A-Z]/.test(password)) score += 5;
            if (/[0-9].*[0-9]/.test(password)) score += 5;
            
            score = Math.min(score, 100);
            
            let level, colorClass, textClass;
            if (score < 40) {
                level = '?? WEAK - Add more character variety';
                colorClass = 'bg-danger';
                textClass = 'text-danger';
            } else if (score < 60) {
                level = '?? FAIR - Could be stronger';
                colorClass = 'bg-warning';
                textClass = 'text-warning';
            } else if (score < 80) {
                level = '?? GOOD - Meets requirements';
                colorClass = 'bg-info';
                textClass = 'text-info';
            } else {
                level = '?? STRONG - Excellent password';
                colorClass = 'bg-success';
                textClass = 'text-success';
            }
            
            return { score, level, colorClass, textClass };
        }

        // Real-time password match validation
        document.getElementById('confirmPassword')?.addEventListener('input', function() {
            const newPassword = document.getElementById('newPassword').value;
            const confirmPassword = this.value;
            
            if (confirmPassword.length > 0) {
                if (newPassword === confirmPassword) {
                    this.classList.remove('is-invalid');
                    this.classList.add('is-valid');
                } else {
                    this.classList.remove('is-valid');
                    this.classList.add('is-invalid');
                }
            } else {
                this.classList.remove('is-valid', 'is-invalid');
            }
        });
    </script>
}
