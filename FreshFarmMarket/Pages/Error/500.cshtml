@page
@model ErrorModel
@{
    ViewData["Title"] = "Server Error";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-template">
                <h1 class="display-1 text-danger">500</h1>
                <h2 class="mb-4">Internal Server Error</h2>
                <div class="mb-4">
                    <i class="bi bi-x-octagon-fill text-danger" style="font-size: 5rem;"></i>
                </div>
                <p class="lead">
                    Oops! Something went wrong on our end.
                </p>
                <p class="text-muted">
                    We're sorry for the inconvenience. Our team has been notified and is working to fix the issue.
                </p>
                <div class="alert alert-info mt-4">
                    <strong>What you can do:</strong>
                    <ul class="list-unstyled mb-0 mt-2">
                        <li>• Try refreshing the page</li>
                        <li>• Go back to the homepage</li>
                        <li>• Contact support if the problem persists</li>
                    </ul>
                </div>
                <div class="mt-4">
                    <a asp-page="/Index" class="btn btn-primary btn-lg me-2">
                        <i class="bi bi-house"></i> Go Home
                    </a>
                    <button onclick="location.reload()" class="btn btn-secondary btn-lg">
                        <i class="bi bi-arrow-clockwise"></i> Refresh
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>
}
